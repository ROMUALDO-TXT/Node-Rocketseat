{
    "openapi": "3.0.0",
    "info":{
        "title":"RentX Documentation",
        "description":"Api",
        "version":"1.0.0",
        "contact":{
            "email":"lucasrlemos03@gmail.com"
        }
    },
    "paths":{
        "/categories":{
            "post":{
                "summary":"Create a category",
                "description":"Create a new category",
                "requestBody":{
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "name":{
                                        "type":"string"
                                    },
                                    "description":{
                                        "type":"string"
                                    }
                                },
                                "example":{
                                    "name": "Category name sample",
                                    "description": "Category description sample"
                                }
                            }
                        }
                    }
                },
                "response":{
                    "201":{
                        "description":"Category created"
                    },
                    "500":{
                        "description":"Category already exists"
                    }
                }
            },
            "get":{
                "tags":["Category"],
                "summary": "List all categories",
                "description": "List of all categories",
                "response":{
                    "200":{
                        "description": "success",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type": "array",
                                    "items":{
                                        "type":"object",
                                        "properties":{
                                            "name":{
                                                "type":"string"
                                            },
                                            "description":{
                                                "type":"string"
                                            }
                                        }
                                    }
                                }
                            }
                        }

                    }
                }
            }
        }

    }
}